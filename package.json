{
    "name": "tarkov-map-viewer",
    "version": "1.2.1",
    "description": "view tarkov maps one click",
    "main": "app/index.js",
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "start": "electron .",
        "test": "electron-mocha ./test",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "wdio": "wdio run wdio.conf.js"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/aar0nsky/tarkov-map-viewer.git"
    },
    "author": "Aaron Ankiel",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/aar0nsky/tarkov-map-viewer/issues"
    },
    "homepage": "https://github.com/aar0nsky/tarkov-map-viewer#readme",
    "devDependencies": {
        "@typescript-eslint/parser": "^5.19.0",
        "@wdio/cli": "^7.19.6",
        "@wdio/local-runner": "^7.19.5",
        "@wdio/mocha-framework": "^7.19.5",
        "@wdio/spec-reporter": "^7.19.5",
        "chromedriver": "^100.0.0",
        "electron": "18.0.0",
        "electron-builder": "^23.0.3",
        "electron-chromedriver": "^18.0.0",
        "electron-mocha": "^11.0.2",
        "electron-reloader": "^1.2.3",
        "eslint": "^8.13.0",
        "prettier": "^2.6.2",
        "prettier-eslint": "^13.0.0",
        "rimraf": "^3.0.2",
        "wdio-chromedriver-service": "^7.3.2",
        "webdriverio": "^7.19.5"
    },
    "dependencies": {
        "electron-default-menu": "^1.0.2",
        "material-design-lite": "^1.3.0"
    },
    "build": {
        "appId": "development.tarkov-map-viewer",
        "productName": "Tarkov Map Viewer",
        "icon": "build/icon.ico",
        "compression": "maximum",
        "directories": {
            "app": ".",
            "output": "out"
        },
        "files": [
            "package.json",
            "app/**/*",
            "node_modules"
        ],
        "extraResources": [
            {
                "to": "config.json",
                "from": "config.json",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "win": {
            "target": "NSIS",
            "icon": "build/icon.ico"
        },
        "nsis": {
            "oneClick": true,
            "installerIcon": "build/icon.ico",
            "uninstallerIcon": "build/icon.ico",
            "license": "LICENSE",
            "runAfterFinish": true
        }
    }
}
